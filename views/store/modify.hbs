<link rel="stylesheet" href="/stylesheets/product/modify.css">
<script type="text/javascript" src="/javascripts/product/modify.js">
</script>
<div class="row">
  <h4>Rent a store</h4>
  <form method="post" enctype="multipart/form-data">
    <div class="col s8">
      <div class="row">
        <div class="input-field col s12">
          <input id="title" type="text" name="title" value="{{product.title}}">
          <label for="title">Title</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea id="description" class="materialize-textarea" name="description">{{product.description}}</textarea>
          <label for="description">Description about this store</label>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <div class="grey lighten-2" id="mainPicField">
            <div id="mainPicAction" class="picContent">
              <i class="material-icons actionItems" id="photoIcon">photo</i>
              <h5 class="actionItems">Upload a cover photo</h5>
              <input type="file" id="mainFile" class="fileUpload" style="display: none;" name="photos"/>
              <a id="chooseBtn" class="waves-effect waves-light btn grey lighten-3" onclick="document.getElementById('mainFile').click();">
                Choose a file
              </a>
            </div>
            <img class="uploadPic" id="mainPic" src="{{product.coverImagePath}}" alt="">
          </div>
        </div>
      </div>
      </div><div class="col s4">
        <button class="btn-large waves-effect waves-light blue-grey right" type="submit" name="action">Save</button>
      </div>
  </form>
</div>
