<link rel='stylesheet' href='/stylesheets/store/store.css' />
<script type="text/javascript" src="/javascripts/store/store.js"></script>
<div class="UserIcon">
</div>

<div class="row">
  <!-- <div class="col s12 m4">
    <div id="counter" class="card #e0e0e0 grey lighten-2">

    </div>
  </div> -->

  {{# each products}}
    <div class="col s12 m4">
      <div class="card">
        <div data-productid={{this._id}} class="productCard card-image waves-effect waves-block waves-light #e0e0e0 grey lighten-2" style="background-image: url('{{this.coverImagePath}}')"></div>
        <div class="card-content #eeeeee grey lighten-3">
          <span class="card-title activator grey-text text-darken-4">{{this.title}}<i class="material-icons right">more_vert</i></span>
          <p>${{this.price}}</p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">{{this.title}}<i class="material-icons right">close</i></span>
          <p>{{this.description}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>
<div class="fixed-action-btn">
  <a class="btn-floating btn-large deep-orange lighten-1">
    <i class="large material-icons">edit</i>
  </a>
  <ul>
      <li><a class="btn-floating green" href="/product/add/{{storeId}}"><i class="material-icons">add</i></a></li>
      <li><a class="btn-floating blue" href="/store/modify/{{storeId}}"><i class="material-icons">edit</i></a></li>
    </ul>
</div>
