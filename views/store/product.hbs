<script type="text/javascript" src="/javascripts/store/product.js"></script>
<link rel="stylesheet" href="/stylesheets/store/product.css">
<div class="row">
  <div class="col s8">
    <div class="row">
      <div class="col s10" id="productPicturesField">
        <div id="mainPicture" class="productPictures" style="background-image: url('{{product.coverImagePath}}')"></div>
      </div>
    </div>
    <div class="row">
      {{# each product.contentImagePath}}
        <div class="col s2">
          <div id="minorPicture1" class="minorPicture productPictures hoverable" style="background-image: url('{{this}}')"></div>
        </div>
      {{/ each}}
    </div>
  </div>

  <div class="col s4">
    <div id="productContentsField">
      <h6>{{title}}</h6>
      <hr>
      <h3>{{product.title}}</h3>
      <p>${{product.price}}</p>
      <a href="add-to-cart/{{product._id}}" class="waves-effect waves-light btn blue-grey">ADD TO CART</a>
      <p>{{product.description}}</p>
      <h5><strong>Remarks</strong></h5>
      <ul>
        <li>how</li>
        <li>where</li>
      </ul>
    </div>
  </div>
</div>
