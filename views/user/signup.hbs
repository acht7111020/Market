<form method="post" id = "signupForm">
  <h1>Sign up</h1>
  {{#if hasErrors}}
    {{#each messages}}
      <p class="errorMsg">{{this}}</p>
    {{/each}}
  {{/if}}
  <!-- <div class = "input-field">
    <input id="ifullname" name="fullname" type="text"/>
