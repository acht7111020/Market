<link rel="stylesheet" href="/stylesheets/user/profile.css">

<div class="row" style="margin-top: 5%;">
  <hr>
  <div class="col s3" style="margin-top: inherit;">
    <div class="row">
      <img src="{{profileUser.profilePic}}" alt="head photo">
    </div>
  </div>
  <div class="col s8 offset-s1" style="margin-top: inherit;">
    <div class="row">
      <h3 id="fullname">{{profileUser.name}}</h3>
      <p id="email">{{profileUser.email}}</p>
      <div class="chip green lighten-1" id="friendChip">
        friend
      </div>
    </div>
    <div class="row">
      <h5>Buyer</h5>
      <hr>
      <br>
      <h6>Rating</h6>
      {{#each buyerRating}}
        <svg class="stars" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
        	 viewBox="0 0 47.94 47.94" style="enable-background:new 0 0 47.94 47.94;" xml:space="preserve">
        <path style="fill:{{this}};" d="M26.285,2.486l5.407,10.956c0.376,0.762,1.103,1.29,1.944,1.412l12.091,1.757
        	c2.118,0.308,2.963,2.91,1.431,4.403l-8.749,8.528c-0.608,0.593-0.886,1.448-0.742,2.285l2.065,12.042
        	c0.362,2.109-1.852,3.717-3.746,2.722l-10.814-5.685c-0.752-0.395-1.651-0.395-2.403,0l-10.814,5.685
        	c-1.894,0.996-4.108-0.613-3.746-2.722l2.065-12.042c0.144-0.837-0.134-1.692-0.742-2.285l-8.749-8.528
        	c-1.532-1.494-0.687-4.096,1.431-4.403l12.091-1.757c0.841-0.122,1.568-0.65,1.944-1.412l5.407-10.956
        	C22.602,0.567,25.338,0.567,26.285,2.486z"/>
        </svg>
      {{/each}}
    </div>
    <div class="row">
      <h5>Seller</h5>
      <hr>
      <br>
      <h6>Rating</h6>
      {{#each sellerRating}}
        <svg class="stars" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
        	 viewBox="0 0 47.94 47.94" style="enable-background:new 0 0 47.94 47.94;" xml:space="preserve">
        <path style="fill:{{this}};" d="M26.285,2.486l5.407,10.956c0.376,0.762,1.103,1.29,1.944,1.412l12.091,1.757
        	c2.118,0.308,2.963,2.91,1.431,4.403l-8.749,8.528c-0.608,0.593-0.886,1.448-0.742,2.285l2.065,12.042
        	c0.362,2.109-1.852,3.717-3.746,2.722l-10.814-5.685c-0.752-0.395-1.651-0.395-2.403,0l-10.814,5.685
        	c-1.894,0.996-4.108-0.613-3.746-2.722l2.065-12.042c0.144-0.837-0.134-1.692-0.742-2.285l-8.749-8.528
        	c-1.532-1.494-0.687-4.096,1.431-4.403l12.091-1.757c0.841-0.122,1.568-0.65,1.944-1.412l5.407-10.956
        	C22.602,0.567,25.338,0.567,26.285,2.486z"/>
        </svg>
      {{/each}}
      <br>
      <br>
      <h6>Owned store</h6>
      <table class="bordered">
        {{#each profileOwnedStores}}
          <tr onclick="document.location = '/store/about/{{this._id}}';">
            <td class="storePicTd"><div style="height: 5rem;"><img class="storePic" src="{{this.detail.coverImage}}" alt=""></div></td>
            <td class="storeNameTd center">{{this.detail.title}}</td>
            <td class="storeLocTd">{{this.status.level}} Level {{this.status.area}}{{this.status.position}}</td>
          </tr>
        {{/each}}
      </table>
    </div>
  </div>
</div>
