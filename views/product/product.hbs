<script type="text/javascript" src="/javascripts/product/product.js"></script>
<link rel="stylesheet" href="/stylesheets/product/product.css">
<div class="UserIcon">
</div>
<div class="row">
  <div class="col s8" id="productPicturesField">
    <div class="row">
      <div class="col s10" id="mainPictureField">
        <img id="mainPicture" class="productPictures" src="{{product.coverImagePath}}" alt="">
      </div>
    </div>
    <div class="row">
      {{# each product.contentImagePath}}
        <div class="col s2 minorPictureField">
          <img class = "minorPicture productPictures" src="{{this}}" alt="">
        </div>
      {{/ each}}
    </div>
  </div>

  <div class="col s4" id="productContentsField">
    <h6>{{title}}</h6>
    <hr>
    <h3>{{product.title}}</h3>
    <p>${{product.price}}</p>
    <a href="add-to-cart/{{product._id}}" class="waves-effect waves-light btn blue-grey">ADD TO CART</a>
    <p>{{product.description}}</p>
    <h5><strong>Remarks</strong></h5>
    <ul>
      <li>how</li>
      <li>where</li>
    </ul>
  </div>
</div>
<div id="editBtn" class="fixed-action-btn" data-userid={{userId}} data-ownerid={{ownerId}}>
  <a class="btn-floating btn-large pink accent-1" href="/product/modify/{{product._id}}">
    <i class="large material-icons">edit</i>
  </a>
</div>
